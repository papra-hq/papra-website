const values = [
  {
    icon: 'i-tabler-heart-handshake',
    title: 'Ethical by Design',
    description: 'No dark patterns, no manipulative tactics. We build software that respects you.',
  },
  {
    icon: 'i-tabler-building-bank',
    title: 'Bootstrapped & Independent',
    description: 'No VC funding, no diluted financing, debt-free. We answer to our users, not investors.',
  },
  {
    icon: 'i-tabler-shield-lock',
    title: 'Your Data is Yours',
    description: 'We never sell your data. Period. Privacy is a right, not a feature.',
  },
  {
    icon: 'i-tabler-brand-open-source',
    title: 'Fully Open Source',
    description: 'Complete transparency. Audit our code, contribute, or self-host anytime.',
  },
  {
    icon: 'i-tabler-trees',
    title: 'Environmentally Conscious',
    description: 'We prioritize sustainability and eco-friendliness in our operations and product design.',
