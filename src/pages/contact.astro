---
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import Layout from '../layouts/Layout.astro';
import { cn } from '../utils/cn';

const contactOptions = [
    {
        name: 'Email',
        label: 'contact@papra.app',
        href: 'mailto:contact@papra.app',
        icon: 'i-tabler-mail',
    },
    {
        name: 'Discord',
        label: 'Papra Discord community',
        href: '/discord',
        icon: 'i-tabler-brand-discord',
    },
    {
        name: 'Github',
        label: 'Papra Github repository',
        href: 'https://github.com/papra-hq/papra',
        icon: 'i-tabler-brand-github',
    },
    {
        name: 'Bluesky',
        label: 'Bluesky profile',
        href: 'https://bsky.app/profile/papra.app',
        icon: 'i-tabler-brand-bluesky',
    },
];
---

<Layout>
    <div class="bg-card flex flex-col w-full min-h-screen">
        <Header variant="block" />

        <div
          class="w-full bg-[linear-gradient(to_right,#80808010_1px,transparent_1px),linear-gradient(to_bottom,#80808010_1px,transparent_1px)] bg-[size:48px_48px] bg-background border-b pt-32 pb-24"
        >
            <div class="max-w-700px mx-auto p-4">
                <h1 class="text-3xl mb-2 font-bold">Contact</h1>
                <p class="text-base mb-2 leading-tight">For any questions or support, please contact us using the following options:</p>
            </div>
        </div>

        <div class="max-w-500px mx-auto p-4 flex flex-col gap-4 my-12 flex-1 w-full">
            {
                contactOptions.map(option => (
                    <a href={option.href} target="_blank" rel="noopener noreferrer" class="flex items-center gap-2 border rounded-lg bg-background p-4 hover:(border-primary) transition">
                        <div class={cn(option.icon, 'size-7 px-6')} />
                        <div>
                            <div class="font-semibold text-base">{option.name}</div>
                            <div class="text-sm text-muted-foreground">{option.label}</div>
                        </div>
                    </a>
                ))
            }
        </div>

        <Footer class="bg-background" />
    </div>
</Layout>
